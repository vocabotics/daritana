# Daritana Production Environment Configuration
# Copy this file to .env.production for production builds

# ========================================
# PRODUCTION API ENDPOINTS
# ========================================
VITE_API_URL=https://api.daritana.com
VITE_API_BASE_URL=https://api.daritana.com
VITE_SOCKET_URL=https://api.daritana.com
VITE_WS_URL=wss://api.daritana.com

# ========================================
# REQUIRED: OpenRouter API (for AI features)
# ========================================
# Get your API key from: https://openrouter.ai/keys
VITE_OPENROUTER_API_KEY=your-production-api-key-here
VITE_OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# ========================================
# AI Models (Production Configuration)
# ========================================
VITE_AI_MODEL_CHAT=openai/gpt-4-turbo-preview
VITE_AI_MODEL_FAST=openai/gpt-3.5-turbo
VITE_AI_MODEL_EMBEDDINGS=openai/text-embedding-3-small
VITE_AI_MODEL_VISION=openai/gpt-4-vision-preview
VITE_AI_MODEL_CODE=anthropic/claude-3-opus

# ========================================
# AI Budget & Monitoring (Production)
# ========================================
VITE_AI_MONTHLY_BUDGET_USD=5000
VITE_AI_ALERT_THRESHOLD_PERCENT=80

# ========================================
# OAuth Client IDs (Production)
# ========================================
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
VITE_MICROSOFT_CLIENT_ID=your-microsoft-client-id
VITE_SLACK_CLIENT_ID=your-slack-client-id
VITE_DROPBOX_CLIENT_ID=your-dropbox-client-id

# ========================================
# Error Tracking (Production)
# ========================================
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_RELEASE=1.0.0

# ========================================
# Analytics (Production)
# ========================================
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_HOTJAR_ID=your-hotjar-id
VITE_MIXPANEL_TOKEN=your-mixpanel-token

# ========================================
# Feature Flags (Production)
# ========================================
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_OAUTH=true

# ========================================
# Platform Configuration (Production)
# ========================================
VITE_PLATFORM_URL=https://daritana.com
VITE_COMPANY_NAME=Daritana Architecture
VITE_COMPANY_LOGO_URL=https://cdn.daritana.com/logo.png
VITE_SUPPORT_EMAIL=support@daritana.com

# ========================================
# Payment Gateway (Production)
# ========================================
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-key
VITE_FPX_MERCHANT_ID=your-fpx-merchant-id

# ========================================
# Performance & Monitoring
# ========================================
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_LOG_LEVEL=error
