# Server Configuration
NODE_ENV=development
PORT=7001
HOST=localhost
FRONTEND_URL=http://localhost:7000

# Database Configuration (Prisma) - Using Supabase (cloud PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/daritana_dev"

# JWT Configuration (use strong secrets in production!)
JWT_SECRET=super-secret-jwt-key-for-development-change-in-production-32-chars-min
JWT_REFRESH_SECRET=super-secret-refresh-key-for-development-change-in-production-32
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration (optional for now)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Configuration (SendGrid - optional for development)
SENDGRID_API_KEY=
FROM_EMAIL=noreply@daritana.com
FROM_NAME=Daritana Platform

# SMTP Configuration (for invitations)
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=ethereal.user@ethereal.email
SMTP_PASS=ethereal.pass
SMTP_FROM=noreply@daritana.com

# File Upload Configuration
UPLOAD_DIRECTORY=uploads
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif,dwg,dxf

# AWS S3 Configuration (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=

# Monitoring Configuration
SENTRY_DSN=
LOG_LEVEL=info

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (updated to include all development ports)
CORS_ORIGIN=http://localhost:7000,http://127.0.0.1:7000,http://localhost:5173,http://127.0.0.1:5173,http://localhost:5174,http://127.0.0.1:5174

# Malaysian-specific Configuration
DEFAULT_TIMEZONE=Asia/Kuala_Lumpur
DEFAULT_CURRENCY=MYR
DEFAULT_LANGUAGE=en

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=super-secret-session-key-for-development-change-in-production
CSRF_SECRET=super-secret-csrf-key-for-development-change-in-production

# Feature Flags
ENABLE_FILE_PROCESSING=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_AI_FEATURES=false
ENABLE_COMPLIANCE_CHECKER=true