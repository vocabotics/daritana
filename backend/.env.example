# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=daritana_dev
DB_USER=postgres
DB_PASS=password

# Test Database Configuration
DB_TEST_NAME=daritana_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@daritana.com
FROM_NAME=Daritana Platform

# File Upload Configuration
UPLOAD_DIRECTORY=uploads
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif,dwg,dxf

# AWS S3 Configuration (for production file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=daritana-files

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=info

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cors Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Malaysian-specific Configuration
DEFAULT_TIMEZONE=Asia/Kuala_Lumpur
DEFAULT_CURRENCY=MYR
DEFAULT_LANGUAGE=en

# Payment Gateway Configuration (FPX, etc.)
FPX_MERCHANT_ID=your-fpx-merchant-id
FPX_PRIVATE_KEY=your-fpx-private-key
FPX_SANDBOX=true

# Stripe Configuration (for international payments)
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# OpenAI Configuration (for AI features)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Twilio Configuration (for SMS notifications)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Google Cloud Configuration (for document processing)
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project
GOOGLE_CLOUD_STORAGE_BUCKET=your-gcs-bucket
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Microsoft Graph Configuration (for Office 365 integration)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=your-microsoft-tenant-id

# Feature Flags
ENABLE_FILE_PROCESSING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_AI_FEATURES=false
ENABLE_COMPLIANCE_CHECKER=true

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret
CSRF_SECRET=your-csrf-secret

# Compliance and Regulatory
UBBL_API_ENDPOINT=https://api.ubbl.gov.my
DBKL_API_ENDPOINT=https://api.dbkl.gov.my
PAM_API_KEY=your-pam-api-key
BEM_API_KEY=your-bem-api-key